# Port for the comfyui-api REST wrapper (accessible to Harmony Link)
PORT=3000

# Port ComfyUI itself listens on (internal, not exposed externally)
COMFYUI_PORT_HOST=8188

# Host binding for wrapper API (:: = all interfaces including IPv6)
HOST=::

# Binding IP for host port mapping (use 0.0.0.0 for IPv4-only)
BIND_IP=0.0.0.0

# Host port that gets mapped to PORT (what Harmony Link connects to)
HOST_PORT=3000

# Log level: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# Path to model manifest file (inside the container)
# Create manifest.yml from manifest.yml.example and mount it
# MANIFEST=/app/manifest.yml

# Path to warmup workflow JSON file (optional, runs on startup to pre-load models)
# WARMUP_PROMPT_FILE=/app/warmup.json

# Maximum request body size in MB (increase if using large workflow JSONs)
MAX_BODY_SIZE_MB=100

# Restart ComfyUI automatically if it crashes
ALWAYS_RESTART_COMFYUI=true

# LRU cache size in GB for downloaded models (0 = disabled)
LRU_CACHE_SIZE_GB=0

# Optional: Hugging Face token for downloading gated models
# HF_TOKEN=

# Optional: AWS credentials for S3 model storage
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
