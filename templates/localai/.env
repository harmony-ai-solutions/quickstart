# Debug Mode Switch
DEBUG=true
# Rebuild trigger - Enable if you experience issues with the precompiled image - Takes a lot of time to rebuild
REBUILD=false
# IP to bind the ports on - use 0.0.0.0 for IPv4 and :: for IPv6
BIND_IP=0.0.0.0
# the port the localai binds to on the host
HOST_PORT=8080
# the port the localai binds to inside the container
CONTAINER_PORT=8080
# The path inside the container where models will be stored
MODELS_PATH=/models
